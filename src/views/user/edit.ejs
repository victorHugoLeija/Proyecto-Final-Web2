
<% title = "Editar Perfil" %>
<div class="boing-container">
  <section class="boing-intro" style="max-width: 400px;">
    <h1 class="boing-title">Editar Perfil</h1>
    <!-- Mensajes -->
    <% if (success) { %>
      <div class="boing-text boing-highlight" style="margin-bottom:1rem;">
        <%= success %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="boing-text boing-highlight" style="margin-bottom:1rem;">
        <%= error %>
      </div>
    <% } %>
    <form action="/user/profile/update" method="POST" class="boing-form">
      <!-- Nombre -->
      <div>
        <label class="boing-text">Nombre completo</label>
        <input
          type="text"
          name="name"
          value="<%= user.username %>"
          class="boing-input"
          required
        />
      </div>
      <!-- Email -->
      <div>
        <label class="boing-text">Correo electrónico</label>
        <input
          type="email"
          value="<%= user.email %>"
          class="boing-input"
          readonly
        />
      </div>
      <!-- Contraseña -->
      <div>
        <label class="boing-text">Nueva contraseña (opcional)</label>
        <input
          type="password"
          name="password"
          placeholder="**********"
          class="boing-input"
        />
        <p class="boing-text" style="font-size:0.95rem;">
          Debe tener 8+ caracteres, mayúscula, minúscula, número y símbolo.
        </p>
      </div>
      <button type="submit" class="boing-btn">Guardar cambios</button>
    </form>
    <a href="/user/profile" class="boing-btn boing-btn-small" style="margin-top:1rem;">← Volver al perfil</a>
  </section>
</div>
