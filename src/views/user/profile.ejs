
<% title = "Perfil de Usuario" %>
<div class="boing-container">
  <section class="boing-intro" style="max-width: 400px;">
    <h1 class="boing-title">Perfil de Usuario</h1>
    <% if (success) { %>
      <div class="boing-text boing-highlight" style="margin-bottom:1rem;">
        <%= success %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="boing-text boing-highlight" style="margin-bottom:1rem;">
        <%= error %>
      </div>
    <% } %>
    <div style="margin-bottom:2rem;">
      <div class="boing-text"><strong>Nombre:</strong> <span class="boing-highlight"><%= user.username %></span></div>
      <div class="boing-text"><strong>Correo:</strong> <span class="boing-tier"><%= user.email %></span></div>
      <div class="boing-text"><strong>Rol:</strong> <span class="boing-tier"><%= user.role %></span></div>
      <div class="boing-text"><strong>Fecha de Registro:</strong> <span class="boing-tier"><%= new Date(user.created_at).toLocaleDateString() %></span></div>
    </div>
    <div>
      <a href="/user/profile/edit" class="boing-btn boing-btn-small">Editar Perfil</a>
      <a href="/user/profile/delete-confirm" class="boing-btn boing-btn-small" style="background:#ff5e62;color:#fff;">Eliminar Cuenta</a>
    </div>
  </section>
</div>